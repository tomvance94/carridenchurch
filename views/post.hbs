{{> head}}
  <body class='app-post'>
    {{> header}}

    <div class='wrapper'>
      <h1>{{page.title}}</h1>
      <time class='post__time'>{{moment page.date}}</time>
      {{{page.content}}}

      {{#if page.audio}}
        <audio controls>
            <source src='http:{{page.audio.fields.file.url}}' type='audio/mpeg'>
            Sorry It Appears you cannot play this in your browser, please click <a href='{{page.audio.fields.file.url}}'>Here</a> to download it.
        </auido>
      {{/if}}
    </div>

{{> footer}}
